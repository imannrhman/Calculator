<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_clear"
        android:layout_marginTop="26dp"
        android:layout_width="wrap_content"
        android:text="AC"
        android:textSize="25sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_angka"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:text="0"
        android:layout_toEndOf="@id/btn_clear"
        android:layout_toRightOf="@id/btn_clear" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_angka"
        >
    <GridLayout
        android:layout_below="@id/tv_angka"
        android:layout_width="wrap_content"
        android:rowCount="6"
        android:columnCount="3"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_tujuh"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="7"
            android:layout_marginRight="26dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_delapan"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="8"
            android:layout_marginRight="26dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_sembilan"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="9"
            android:layout_marginRight="26dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_empat"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="4"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_lima"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="5"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_enam"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="6"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_satu"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="1"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_dua"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="2"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_tiga"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="3"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_tambah"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="+"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_nol"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_kurang"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="-"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_kali"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="*"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_samadengan"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="="
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_bagi"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="/"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_koma"
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:text="."
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
    </GridLayout>
</ScrollView>
</RelativeLayout>